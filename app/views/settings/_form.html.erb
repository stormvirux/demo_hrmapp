<%= simple_form_for @setting, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :leave %>
  <%= f.input :cur %>
  <%= f.input :dedperday %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                settings_path, :class => 'btn' %>
  </div>
<% end %>
