<%= simple_form_for @payroll, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :empno,collection: Employee.all,label_method: :empname,value_method: :empno,:include_blank => false,label: "Employee No" %>
  <%= f.fields_for :allowances do |builder| %>  
    <%= render 'allow',f: builder %>
  <% end %>
  <p><%= link_to_add_fields "Add Salary",f,:allowances %></p>
  <%= f.fields_for :deductions do |builder| %>  
    <%= render 'deduct',f: builder %>
  <% end %>
<p><%= link_to_add_fields "Add Deductions",f,:deductions %></p>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                payrolls_path, :class => 'btn' %>
  </div>
<% end %>
