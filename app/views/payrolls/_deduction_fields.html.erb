<fieldset>
		<legend>Deductions</legend>
  <div class="pay">
  	<div class="container">
  	<div class="row">
  		<div class="span3">
          <%= f.input :dtype,label: false,placeholder: 'Type of Deduction'%>
        </div>
        <div class="span3">
          <%= f.input :dedtype,label: false,collection:[["% of salary","%"],["Amount","amt"]],include_blank: false%>
