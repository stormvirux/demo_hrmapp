        <div class="span3">
          <%= f.input :amount,label: false,placeholder: "Amount"%>
        </div>
        <div class="span1 payspand">
          <%= f.hidden_field :_destroy %>
          <%= link_to "Remove","#" ,class: "remove_fields btn btn-danger"%>
        </div>
    </div>
  </div>
</div>


</fieldset>