<%- model_class = Employee -%>

<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.titleize %></h3>
</div>
<div class="row-fluid">
  <div class="span3">
    <ul id="employee-menu" class="nav nav-stacked nav-tabs">
      <li data-menu="employee" class="active"><a href="#employee" data-target="#employee" data-toggle="tab"><%=t '.title', :default => model_class.model_name.human.titleize %></a></li>
      <li data-menu="payroll"><a href="#payroll" data-target="#payroll" data-toggle="tab"><%=t("employees.payroll")%></a></li>
    </ul>
  </div>
  <div class="tab-content" class="span9">
    <div class="tab-pane active fade in" id="employee">
        <%= render 'emp' %>
    </div>
    <div class="tab-pane" id="payroll">
       <%= render 'payroll' %>
    </div>


  

</div>
</div>