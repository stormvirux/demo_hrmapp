<%- model_class = Employee -%>

<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.titleize %></h3>
</div>
<div class="row-fluid">
  <div class="span3">
    <ul id="staff-menu" class="nav nav-stacked nav-tabs">
      <li data-menu="staff" class="active"><a href="#staff">Staff</a></li>
      <li data-menu="payroll"><a href="#payroll">Payroll</a></li>
    </ul>
  </div>
  <div id="block-staff" class="span9">
  <table class="table table-striped">
  <thead>
    <tr>
      <th>S#</th>
      <th><%= model_class.human_attribute_name(:empno) %></th>
      <th><%=t("documents.name")%></th>
      <th><%= model_class.human_attribute_name(:nationality) %></th>
      <th><%= model_class.human_attribute_name(:designation) %></th>
      <th><%= model_class.human_attribute_name(:department) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each_with_index do |employee,i| %>
      <tr>
        <td><%= link_to (i+1), employee_path(employee),{class: "link"} %></td>
        <td><%= employee.empno %></td>
        <td><%= link_to employee.fullname,employee_path(employee),{class: "link"} %></td>
        <td><%= employee.nationality %></td>
        <td><%= employee.designation %></td>
        <td><%= employee.department %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_employee_path(employee), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      employee_path(employee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="form-actions">
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_employee_path,
            :class => 'btn btn-primary' %>
<%= link_to "To Excel",employees_path(format: "xls"),:class => 'btn btn-mini' %>
</div>
