<%- model_class = Leaveroll -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="progress progress-danger">
  <div class="bar" style="<%= 'width:'+ (@leaveroll.lprogress).to_s + '%' %>"></div>
</div>

<table class="table table-striped">
  <tr>
    <td><%= model_class.human_attribute_name(:empno) %>:</td>
    <td><%= @leaveroll.empno %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:ltype) %>:</td>
    <td><%= @leaveroll.ltype %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:lfrom) %>:</td>
    <td><%= @leaveroll.lfrom %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:lto) %>:</td>
    <td><%= @leaveroll.lto %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:totdays) %>:</td>
    <td><%= @leaveroll.totdays %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:notes) %>:</td>
    <td><%= @leaveroll.notes %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:approved) %>:</td>
    <td><%= @leaveroll.approved %></td>
</tr>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              leaverolls_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_leaveroll_path(@leaveroll), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              leaveroll_path(@leaveroll),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
