<%= simple_form_for @leaveroll, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :empno,collection: Employee.all,label_method: :empname,value_method: :empno,:include_blank => false,label: "Employee No" %>
  <%= f.input :ltype,collection: Leavetype.all,label_method: :ltype,value_method: :ltype,:include_blank => false,label: "Leave Type"%>
  <%= f.input :lfrom,label: "Leave From" %>
  <%= f.input :lto,label: "Leave To" %>
  <%= f.input :notes,label: "Remarks",input_html: {class: "input-xxlarge",rows: '10'} %>
  <%= f.input :approved,label: "Approved?" %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                leaverolls_path, :class => 'btn' %>
  </div>
<% end %>
